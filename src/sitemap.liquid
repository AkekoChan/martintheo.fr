---
permalink: /sitemap.xml
layout: null
eleventyExcludeFromCollections: true
excludeFromSitemap: true
---
{% comment %} Rework Soon {% endcomment %}
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for page in collections.all %}
    {% assign url = page.url | excludeCSS %}
    {% if url and page.data.excludeFromSitemap != true %}
      {% assign lastmod = page.data.lastUpdated | default: page.date %}
      <url>
        <loc>{{ metadata.urlEleventy }}{{ page.url }}</loc>
        <lastmod>{{ lastmod | toISOString }}</lastmod>
      </url>
    {% endif %}
  {% endfor %}
</urlset>